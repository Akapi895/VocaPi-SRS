{
  "manifest_version": 3,
  "name": "Vocab SRS - Test",
  "version": "1.0.0",
  "description": "Test extension",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/core/logger.js",
        "src/core/utils.js",
        "src/core/api.js",
        "src/core/contentScript.js",
        "src/core/date.js",
        "src/core/storage.js",
        "src/ui/js/addModal.js"
      ],
      "css": [
        "src/ui/css/addModal.css"
      ],
      "run_at": "document_idle"
    }
  ],
  
  "background": {
    "service_worker": "src/core/serviceWorker.js",
    "type": "module"
  },
  
  "action": {
    "default_popup": "src/ui/html/popup.html",
    "default_title": "Vocab SRS"
  },
  
  "options_page": "src/ui/html/options.html",
  
  "web_accessible_resources": [
    {
      "resources": [
        "src/core/utils.js",
        "src/core/api.js",
        "src/env-config.js",
        "src/ui/js/analytics.js",
        "src/advanced-srs.js",
        "src/ui/js/gamification.js",
        "src/cloud-sync.js",
        "src/performance-optimizer.js",
        "src/managers/integration-manager.js",
        "src/keyboard-shortcuts.js",
        "src/ui/html/review.html",
        "src/ui/html/analytics.html",
        "src/ui/css/review.css",
        "src/ui/css/analytics.css",
        "src/ui/css/addModal.css",
        "src/ui/js/review.js",
        "src/ui/js/analytics.js",
        "src/ui/js/analytics-dashboard.js",
        "src/ui/js/cloud-sync-ui.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
