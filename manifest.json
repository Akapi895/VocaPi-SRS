{
  "manifest_version": 3,
  "name": "VocaPi - Test",
  "version": "1.0.0",
  "description": "Test extension",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],

  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "src/core/serviceWorker.js"
  },
  
  "action": {
    "default_popup": "src/ui/html/popup.html",
    "default_title": "VocaPi"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>", "file://*"],
      "js": ["src/content/index.js"],
      "run_at": "document_idle"
    }
  ],
  
  "options_page": "src/ui/html/options.html",
  
  "web_accessible_resources": [
    {
      "resources": [
        "src/core/indexeddb.js",
        "src/core/utils.js",
        "src/core/storage.js",
        "src/core/migration.js",
        "src/core/api.js",
        "src/core/env-config.js",
        "src/core/date.js",
        "src/core/id.js",
        "src/core/text.js",
        "src/core/logger.js",
        "src/features/analytics/core/stats.js",
        "src/features/srs/advanced-srs.js",
        "src/features/gamification/gamification.js",
        "src/ui/js/analytics.js",
        "src/ui/js/analytics-dashboard.js",
        "src/ui/js/popup.js",
        "src/ui/js/mock-chrome.js",
        "src/ui/html/review.html",
        "src/ui/html/analytics.html",
        "src/ui/css/review.css",
        "src/ui/css/analytics.css",
        "src/ui/css/addModal.css",
        "src/ui/js/review.js"
      ],
      "matches": ["<all_urls>", "file://*"]
    }
  ],
  
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
