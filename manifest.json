{
  "manifest_version": 3,
  "name": "Vocab SRS - Spaced Repetition Vocabulary",
  "version": "1.0.0",
  "description": "Learn English vocabulary with spaced repetition by highlighting words on any webpage",
  
  "permissions": [
    "storage",
    "scripting", 
    "activeTab",
    "contextMenus"
  ],
  
  "background": {
    "service_worker": "src/serviceWorker.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/utils.js",
        "src/api.js", 
        "src/ui/addModal.js",
        "src/contentScript.js"
      ],
      "css": [
        "src/ui/addModal.css"
      ],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "src/ui/popup.html",
    "default_title": "Vocab SRS"
  },
  
  "options_page": "src/options.html",
  
  "icons": {
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "src/ui/addModal.css",
        "src/ui/review.html",
        "src/ui/review.css",
        "src/ui/review.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
