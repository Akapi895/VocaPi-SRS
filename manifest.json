{
  "manifest_version": 3,
  "name": "VocaPi - Vocabulary Master with Spaced Repetition",
  "version": "1.0.0",
  "description": "Learn vocabulary efficiently with spaced repetition system, analytics, and gamification features.",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],

  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "src/core/serviceWorker.js"
  },
  
  "action": {
    "default_popup": "src/ui/html/popup.html",
    "default_title": "VocaPi - Vocabulary Master with Spaced Repetition"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/core/utils.js",
        "src/core/text.js",
        "src/core/api.js",
        "src/core/storage.js",
        "src/ui/js/addModal.js",
        "src/content/index.js"
      ],
      "css": ["src/ui/css/addModal.css"],
      "run_at": "document_idle"
    }
  ],
  
  "options_page": "src/ui/html/options.html",
  
  "web_accessible_resources": [
    {
      "resources": [
        "src/ui/html/review.html",
        "src/ui/html/analytics.html",
        "src/ui/css/review.css",
        "src/ui/css/analytics.css",
        "src/ui/css/addModal.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
