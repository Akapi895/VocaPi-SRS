{
  "manifest_version": 3,
  "name": "VocaPi - Vocabulary Master with Spaced Repetition",
  "version": "1.1.0",
  "description": "Learn vocabulary efficiently with spaced repetition system, analytics, and gamification features.",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],

  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "src/core/serviceWorker.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "VocaPi - Vocabulary Master with Spaced Repetition"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/content/index.js"
      ],
      "run_at": "document_idle"
    }
  ],
  
  "options_page": "options.html",
  
  "web_accessible_resources": [
    {
      "resources": [
        "review.html",
        "analytics.html",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
